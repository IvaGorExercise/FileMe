

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="0dip"
        android:background="@color/bijela" >

        <TableRow>
            
              <LinearLayout 
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:paddingLeft="5dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  >
           <ImageView
                  android:id="@+id/itemClanImage"
                  android:layout_gravity="left|center" 
                  android:scaleType="centerCrop"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  />
              </LinearLayout>
              
              
         <TableLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingTop="0dip"
          android:layout_gravity="center"
            >
            <TableRow>      

               <TextView
                android:id="@+id/itemClanIme"
               	android:layout_width="180dp"
               	android:layout_height="wrap_content"
               	android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="3dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:maxLines="3"
                android:textStyle="bold"
                android:layout_weight="1"
                
                />
               
               
      <TableLayout
        android:id="@+id/tableLayout1IstekleNaGrupama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="5dip" >    
               
         <TableRow>
               
               <TextView
                android:id="@+id/itemClanPauzirajNaGrupama"
             	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:textSize="12dp"
               	android:text="@string/twitemClanPauziraj"
                
                />
               
             <CheckBox
        		android:id="@+id/cbOtvoriPauziran"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentLeft="true"
        		android:layout_marginLeft="1dp"
        		android:layout_marginTop="0dp"/>
             
                </TableRow>
     
 
      			</TableLayout>

          </TableRow>
         
            </TableLayout>

        </TableRow>

     
    </TableLayout>

