<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/blue09" />
            <stroke
                android:width="1dp"
                android:color="@color/blue09" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/blue10"
                android:endColor="@color/blue12"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/blue09"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>